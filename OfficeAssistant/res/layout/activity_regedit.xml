<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bgrd" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip" 
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        android:text="會員姓名 : "
                        android:textColor="#333333"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/etName"
                        android:hint="請輸入姓名"
                        android:textSize="22sp"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:nextFocusDown="@+id/etAccount"
                        android:textColor="#FFFFFF" >
                    </EditText>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fatextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓別 :"
                    android:textColor="#333333"
                    android:textSize="22sp" />

                <CheckBox
                    android:id="@+id/cbFemale"
         
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:checked="true"
                    android:text="女"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/cbMale"
    
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="男"
                    android:textColor="#333333" />
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView
                        android:text="E-mail帳號 :"
                        android:textSize="22sp"
                        android:textColor="#333333" />

                    <EditText
                        android:id="@+id/etAccount"
                        android:hint="請輸入E-mail"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:textSize="22sp"
                        android:nextFocusDown="@+id/etPassowrd"
                        android:textColor="#FFFFFF" >
                    </EditText>
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="密碼 : "
                        android:textSize="22sp"
                        android:textColor="#333333" />

                    <EditText
                        android:id="@+id/etPassowrd"
                        android:textSize="22sp"
                        android:hint="6個以上的英文或數字"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:textColor="#FFFFFF" >
                    </EditText>
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="確認密碼 : "
                        android:textSize="22sp"
                        android:textColor="#333333" />

                    <EditText
                        android:id="@+id/etPassowrd1"
                        android:hint="6個以上的英文或數字"
                        android:textSize="22sp"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:textColor="#FFFFFF" >
                    </EditText>
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="出生年月日 : "
                        android:textSize="22sp"
                        android:textColor="#333333" />

                    <Button
                        android:id="@+id/btnSetDate"
                        android:layout_height="40dp"
                       android:textSize="22sp"
            
                        android:gravity="center_vertical"
                        android:text="設定日期"
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="聯絡電話 :"
                        android:textColor="#333333"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:hint="042221234"
                        android:inputType="phone"
                        android:textSize="22sp"
                        android:lines="1"
                        android:textColor="#FFFFFF" >
                    </EditText>
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="手機 :"
                        android:textColor="#333333"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/etCellPhone"
                        android:hint="0988168168"
                        android:inputType="phone"
                        android:lines="1"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF" >
                    </EditText>
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="縣市 :"
                        android:textColor="#333333"
                        android:textSize="22sp" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:textSize="22sp"
            
       
             
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="鄉鎮市區 :"
                        android:textColor="#333333"
                        android:textSize="22sp" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:textSize="22sp"
          
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:text="地址 :"
                        android:textColor="#333333"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/etAddr"
                        android:hint="請輸入地址"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="22sp"
                        android:textColor="#FFFFFF" >
                    </EditText>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接收電子報 :"
                    android:textColor="#333333"
                    android:textSize="22sp" />

                <CheckBox
                    android:id="@+id/cbReceveY"
    
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="是"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/cbReceveN"

                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="否"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的身分是?"
                    android:textColor="#333333"
                    android:textSize="22sp" />

                <CheckBox
                    android:id="@+id/sccc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="企業"
                    android:textColor="#333333"
                    android:textSize="22sp" />

                <CheckBox
                    android:id="@+id/sccc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    
                    android:text="設計師"
                    android:textColor="#333333"
                    android:textSize="22sp" />

                <CheckBox
                    android:id="@+id/sccc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                  
                    android:text="不限"
                    android:textColor="#333333"
                    android:textSize="22sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="註冊"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>